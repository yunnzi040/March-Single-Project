<?xml version="1.0" encoding="UTF-8"?>
<queries>
    <query id="getAllClasses">
        SELECT
        *
        FROM classes
    </query>

    <query id="getClasses">
        SELECT
        *
        FROM classes
        WHERE class_code = ?
    </query>

    <query id="addClasses">
        INSERT INTO classes (class_code, class_name, class_time, capacity, price, status, created_at)
        VALUES (?, ?, ?, ?, ?, 0, now())
    </query>

    <query id="updateClasses">
        UPDATE classes SET class_code = ?, class_name = ?, class_time = ?, capacity = ?, price = ?
        WHERE status = 0
    </query>

    <query id="deleteClasses">
        UPDATE instructor_class SET status = 0
        WHERE class_code = ?
    </query>

    <query id="assignInstructor">
        INSERT INTO instructor_class (instructor_id, class_code)
        VALUES (?, ?)
    </query>

    <query id="cancelInstructor">
        DELETE FROM instructor_class WHERE instructor_id = ? AND class_code = ?
    </query>

    <query id="getAssignedClasses">
        SELECT *
        FROM instructor_class
        WHERE instructor_id = ?
    </query>

    <query id="getAssignedInstructors">
        SELECT *
        FROM instructor_class
        WHERE class_code = ?
    </query>

    <query id="getAllList">
        SELECT
        *
        FROM instructor_class
    </query>
</queries>